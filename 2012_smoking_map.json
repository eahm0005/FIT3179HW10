{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Percentage of Smokers Within Population per Country",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/eahm0005/FIT3179/main/ne_110m.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer":[
      {
        "transform": [
          {"calculate": "'No available data for ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/eahm0005/FIT3179/main/smoking_DV2_editedregions.csv"
              },
              "key": "Country",
              "fields": ["PercentageTotal"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "PercentageTotal",
            "title": "% of Population Smoking",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "scheme":"orangered"
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "PercentageTotal", "type": "quantitative", 
              "title": "Percentage of Smokers in Population", "format": ".1f"}
          ]
        }
      }
    ]
    
  }